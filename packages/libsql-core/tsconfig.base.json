    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["esnext"],
        "target": "esnext",
        "esModuleInterop": true,
        "isolatedModules": true,
        "rootDir": "src/",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/"],
    "exclude": ["**/__tests__"]
}
