{
    "name": "@libsql/core",
    "version": "0.16.0",
    "keywords": [
        "libsql",
        "database",
        "sqlite",
        "serverless",
        "vercel",
        "netlify",
        "lambda"
    ],
    "description": "libSQL driver for TypeScript and JavaScript",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/libsql/libsql-client-ts",
        "directory": "packages/libsql-core"
    },
    "authors": [
        "Jan Špaček <honza@chiselstrike.com>",
        "Pekka Enberg <penberg@chiselstrike.com>",
        "Jan Plhak <jp@chiselstrike.com>"
    ],
    "license": "MIT",
    "type": "module",
    "exports": {
        "./api": {
            "import": {
                "types": "./api.d.ts",
                "default": "./api.js"
            },
            "require": {
                "types": "./api.d.cts",
                "default": "./api.cjs"
            }
        },
        "./config": {
            "import": {
                "types": "./config.d.ts",
                "default": "./config.js"
            },
            "require": {
                "types": "./config.d.cts",
                "default": "./config.cjs"
            }
        },
        "./uri": {
            "import": {
                "types": "./uri.d.ts",
                "default": "./uri.js"
            },
            "require": {
                "types": "./uri.d.cts",
                "default": "./uri.cjs"
            }
        },
        "./util": {
            "import": {
                "types": "./util.d.ts",
                "default": "./util.js"
            },
            "require": {
                "types": "./util.d.cts",
                "default": "./util.cjs"
            }
        }
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "build": "rm -rf ./dist && npx tsup && cp package.json ./dist/package.json",
        "format:check": "prettier --check .",
        "test": "jest --runInBand",
        "typecheck": "tsc --noEmit",
        "typedoc": "rm -rf ./docs && typedoc"
    },
    "dependencies": {
        "js-base64": "^3.7.5"
    },
    "devDependencies": {
        "@types/jest": "^29.2.5",
        "@types/node": "^18.15.5",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.5",
        "tsup": "^8.5.1",
        "typedoc": "^0.23.28",
        "typescript": "^4.9.4"
    }
}
